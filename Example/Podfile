source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def import_pods
    pod "TraceLog/Objc", :path => "../"
    pod "TraceLog/Swift", :path => "../"
end

target 'TraceLog-iOS', :exclusive => true do
   platform :ios, '8.0'
    
   import_pods
end

target 'TraceLog-iOS-Tests', :exclusive => true do
   platform :ios, '8.0'
  
   import_pods
end

target 'TraceLog-OSX', :exclusive => true do
   platform :osx, '10.10'
  
   import_pods
end

target 'TraceLog-OSX-Tests', :exclusive => true do
   platform :osx, '10.10'
    
   import_pods
end
